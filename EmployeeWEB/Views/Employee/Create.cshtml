@model Employee
@{
    ViewData["Title"] = "Create";
    string crear = "Crear";
}

    <div class="card mt-5">
        <div class="card-header bg-dark text-light ml-0 row container">
            <div class="col-md-6">
                <i class="fa fa-save"></i>&nbsp;Crear Producto
            </div>
            <div class="col-md-6 text-right"></div>
        </div>
        <div class="card-body">
            <form class="mt-2" method="post" asp-action="Create">
                <div class="row">
                    @if (Model.Errors.Count > 0)
                    {
                        foreach (var item in Model.Errors)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert" style="width:100%">
                                <span>@item.ErrorMessage</span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                    }
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.Name" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.Name" />
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.LastName" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.LastName" />
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.HoursWorked" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.HoursWorked" />
                            <span asp-validation-for="@Model.HoursWorked" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.Job" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.Job" />
                            <span asp-validation-for="@Model.Job" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.Salary" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.Salary" />
                            <span asp-validation-for="@Model.Salary" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <partial name="_ButtonOptionsPartial" model="crear" />
                    </div>
                </div>
           </div>
        </form>
    </div>
</div>

