@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="card" style="margin-top:30px">
    <div class="card-header bg-dark text-light ml-0 row container">
        <div class="col-md-6">
            <i class="fa fa-list ul"></i>&nbsp;Lista de Productos
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" asp-controller="Employee" class="btn btn-primary btn-sm text-white"><i class="fa fa-plus"></i></a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            @if (Model != null && Model.Count() > 0)
            {
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x => x.Name)</th>
                            <th>@Html.DisplayNameFor(x => x.LastName)</th>
                            <th>@Html.DisplayNameFor(x => x.HoursWorked)</th>
                            <th>@Html.DisplayNameFor(x => x.Job)</th>
                            <th>@Html.DisplayNameFor(x => x.Salary)</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                        <tr>
                            <td>@Html.DisplayFor(x => item.Name)</td>
                            <td>@Html.DisplayFor(x => item.LastName)</td>
                            <td>@Html.DisplayFor(x => item.HoursWorked)</td>
                            <td>@Html.DisplayFor(x => item.Job)</td>
                            <td>@Html.DisplayFor(x => item.Salary)</td>
                            <td width="100px">
                                <partial name="_TableButtonPartial" model="@item.Id" />
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
                </div>
            }
            else
            {
                <p>No hay registro en la base de datos</p>
            }
            </div>
    </div>
</div>